---
layout: "layouts/base.njk"
---

{% block content %}
  {# Header #}
  <section class="section has-background-white"  >
    <div class="container">
      <div class="columns is-vcentered">
        <div class="column is-8 is-offset-2">
          <div class="has-text-centered">
            <h1 class="title is-2">Favoriser l'entraide sur le territoire de Dinan au temps du coronavirus</h1>
            {# <h2 class="subtitle is-3">- {{ site.baselineLocation }} -</h2> #}
            <div class="content">
              {{ content | safe }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section py-5">
    <div class="container">
      <div class="columns">
        <div class="column is-8 is-offset-2">
          <div class="has-text-centered">
            <h2 class="title is-3">Alimentation</h2>
            <p>Les 2 derniers commerces, producteurs, restaurants proposant des produits locaux et que vous pourriez soutenir.</p>
          </div>
        </div>
      </div>
      <div class="columns is-multiline">
        {%- for commerce in commerces | reverse | limit(2)-%}
          <div class="column is-6">
            {% include 'partials/commerce-card.njk' %}
          </div>
        {%- endfor -%}
      </div>
      <div class="has-text-right">
        <a class="button is-primary" href="/commerces/">Voir toutes les propositions alimentations</a>
      </div>
    </div>
  </section>

{% endblock %}