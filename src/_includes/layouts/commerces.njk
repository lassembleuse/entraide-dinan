---
layout: "layouts/base.njk"
---

{% block content %}

  <section class="section">
    <header>
      <div class="container">
        <h1 class="title is-1 has-text-centered">{{ title }}</h1>
        <div class="columns">
          <div class="column is-6 is-offset-3">
            <div class="has-text-centered content">
              {{ content | safe }}
            </div>
          </div>
        </div>
      </div>
    </header>
  </section>

  <section class="section py-1">
    <div class="container">
      <div class="columns is-multiline">
        {%- for commerce in commerces | reverse -%}
          <div class="column is-6">
            {% include 'partials/commerce-card.njk' %}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </section>

{% endblock %}