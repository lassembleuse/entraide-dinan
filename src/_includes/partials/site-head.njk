<head{% if page.url == "/" %} itemscope itemtype="https://schema.org/WebSite"{% endif %}>

  {% set currentPublisher = 'Des Hommes et des Arbres' %}
  {% set baseUrl = environment.baseUrl %}
  {% set currentUrl = baseUrl + page.url %}

  {% set currentTitle %}
    {% if seoTitle %}
      {{ seoTitle | safe }}
    {% elif layout == "layouts/action.njk" %}
      {{ action.titre + ' - ' + site.title | safe }}
    {% elif title %}
      {{ title + ' - ' + site.title | safe }}
    {% else %}
      {{ site.title | safe }}
    {% endif %}
  {% endset %}

  {% set currentDescription %}
    {% if seoDescription %}
      {{ seoDescription  | safe }}
    {% elif layout == "layouts/action.njk" %}
      {{ action.titre + ', ' + action.descriptif  | safe }}
    {% else %}
      {{ site.description  | safe }}
    {% endif %}
  {% endset %}

  {% set currentImage %}
    {% if seoImage %}
      {{ seoImage }}
    {% elif layout == "layouts/action.njk" %}
      {{ action.mainPicturePath.normal | actionPicture }}
    {% else %}
      {{ site.seoDefaultPicture }}
    {% endif %}
  {% endset %}
  {% set currentImageUrl = baseUrl + currentImage %}

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>{{ currentTitle }}</title>
  <meta name="description" content="{{ currentDescription }}">
  <link rel="canonical" href="{{ currentUrl }}"  itemprop="url"/>

  {# <link rel="stylesheet" href="/css/main.min.css?ref={{ site.buildTime | date('X') }}"> #}
  <link rel="stylesheet" href="{{ '/css/main.css' | url }}">

  <!-- Feed -->
  <link rel="alternate" href="/feed.xml" title="{{ site.title }} - Blog RSS" type="application/atom+xml">

  <!-- Twitter -->
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:title" content="{{ currentTitle }}"/>
  <meta name="twitter:description" content="{{ currentDescription }}"/>
  <meta name="twitter:url" content="{{ currentUrl }}"/>
  <meta name="twitter:image" content="{{ currentImageUrl }}"/>
  <meta name="twitter:creator" content="{{ site.authorTwitter }}" />
  <!-- Open Graph -->
  <meta property="og:type" content="article"/>
  <meta property="og:locale" content="fr_FR"/>
  <meta property="og:site_name" content="{{ site.title }}"/>
  <meta property="og:title" content="{{ currentTitle }}" />
  <meta property="og:url" content="{{ currentUrl }}" />
  <meta property="og:description" content="{{ currentDescription }}" />
  <meta property="og:image" content="{{ currentImageUrl }}" />
  <meta property="og:image:url" content="{{ currentImageUrl }}"/>
  <meta property="og:image:secure_url" content="{{ currentImageUrl }}"/>
  <meta property="og:image:width" content=""/>
  <meta property="og:image:height" content=""/>
  <meta property="article:publisher" content="{{ currentPublisher }}"/>
  <!-- Google+ / Schema.org -->
  <meta itemprop="name" content=""/>
  <meta itemprop="headline" content=""/>
  <meta itemprop="description" content="{{ currentDescription }}"/>
  <meta itemprop="image" content="{{ currentImageUrl }}"/>
  <meta itemprop="datePublished" content=""/>
  <meta itemprop="dateModified" content="" />
  <meta itemprop="author" content="{{ currentPublisher }}"/>
  <meta itemprop="publisher" content="{{ currentPublisher }}"/>

  <!-- Apple icon (minimal) -->
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">
</head>